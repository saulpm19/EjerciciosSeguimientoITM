@model Ejercicios.Models.Password
@{
    ViewData["Title"] = "Generador de Contraseñas Seguras";
}

<h2>Generador de Contraseñas Seguras</h2>

<form asp-controller="Password" asp-action="Index" method="post">
    <div>
        <label for="length">Longitud:</label>
        <input type="number" id="length" name="length" required />
    </div>
    <div>
        <label for="includeSpecialChars">Incluir Caracteres Especiales:</label>
        <input type="checkbox" id="includeSpecialChars" name="includeSpecialChars" />
    </div>
    <div>
        <label for="includeNumbers">Incluir Números:</label>
        <input type="checkbox" id="includeNumbers" name="includeNumbers" />
    </div>
    <div>
        <label for="includeUpperCase">Incluir Mayúsculas:</label>
        <input type="checkbox" id="includeUpperCase" name="includeUpperCase" />
    </div>
    <button type="submit">Generar</button>
</form>

@if (ViewBag.GeneratedPassword != null)
{
    <div>
        <h3>Contraseña Generada:</h3>
        <p>@ViewBag.GeneratedPassword</p>
    </div>
}
